# Laravel Environment Configuration for Render + PlanetScale
APP_NAME="EasyPass"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://easypass-backend.onrender.com
APP_TIMEZONE=UTC

# PlanetScale Database Configuration
# Get these values from your PlanetScale dashboard
DATABASE_URL=mysql://username:password@host:port/database?sslmode=require
DB_CONNECTION=mysql
DB_HOST=
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Cache Configuration
CACHE_STORE=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://easypass-frontend.onrender.com

# Mail Configuration (optional)
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@easypass.com"
MAIL_FROM_NAME="EasyPass EMS"

# Stripe Configuration (optional)
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# Logging
LOG_CHANNEL=stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
